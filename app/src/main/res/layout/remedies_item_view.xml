        android:layout_marginTop="5dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#858383"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
